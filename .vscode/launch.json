{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Fastapi Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/uvicorn",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "app.main:app",
                "--port=8005",
                "--reload"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${fileDirname}",
        }
    ]
}