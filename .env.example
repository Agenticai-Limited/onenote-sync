# This file serves as a template for the required environment variables.
# Copy this file to .env and fill in your actual credentials.
# The .env file is ignored by git, so your secrets are safe.

# ----------------------------
# Microsoft Graph API Settings
# ----------------------------
# You can get these by registering an application in your Azure AD.
# See: https://learn.microsoft.com/en-us/graph/auth-register-app-v2
MS_CLIENT_ID="YOUR_MICROSOFT_CLIENT_ID"
MS_CLIENT_SECRET="YOUR_MICROSOFT_CLIENT_SECRET"
MS_USER_EMAIL=

# ---------------------
# AWS Bedrock Settings
# ---------------------
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY_ID"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_ACCESS_KEY"
AWS_REGION_NAME="us-east-1" # Or your preferred AWS region for Bedrock

# -----------------------
# PostgreSQL DB Settings
# -----------------------
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="YOUR_DATABASE_PASSWORD"
POSTGRES_HOST="127.0.0.1"
POSTGRES_PORT="5432"
POSTGRES_DB="onenote_metadata"

# -----------------
# API Key Security
# -----------------
# Generate a strong, random string for this key.
# This key is required to authorize calls to the API endpoints.
API_KEY="YOUR_STRONG_RANDOM_API_KEY" 

# -----------------
# SharePoint ONLY
# -----------------
# The xxxxxx phrase after 'sites' in URL "https://clientportal01.sharepoint.com/sites/xxxxxx/_layout...." 
SHAREPOINT_SITE_NAME=""
SHAREPOINT_NOTEBOOK_NAME=""